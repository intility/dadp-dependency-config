{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Dependency update schedules",
  "packageRules": [
    {
      "description": "cert-manager - biweekly Monday",
      "matchPackagePatterns": ["cert-manager", "^quay\\.io/jetstack/"],
      "schedule": ["every 2 weeks on monday"]
    },
    {
      "description": "external-secrets - biweekly Monday",
      "matchPackagePatterns": ["external-secrets"],
      "schedule": ["every 2 weeks on monday"]
    },
    {
      "description": "ArgoCD - biweekly Tuesday",
      "matchPackagePatterns": ["argo-cd", "argoproj", "^quay\\.io/argoproj/"],
      "schedule": ["every 2 weeks on tuesday"]
    },
    {
      "description": "CloudNativePG - biweekly Wednesday",
      "matchPackagePatterns": ["cloudnative-pg", "^ghcr\\.io/cloudnative-pg/"],
      "schedule": ["every 2 weeks on wednesday"]
    },
    {
      "description": "Barman Cloud - biweekly Wednesday",
      "matchPackagePatterns": ["plugin-barman-cloud", "barman-cloud"],
      "schedule": ["every 2 weeks on wednesday"]
    },
    {
      "description": "GitLab - 1st of month",
      "matchPackagePatterns": ["^registry\\.gitlab\\.com/", "gitlab/"],
      "schedule": ["on the 1st day of the month"]
    },
    {
      "description": "Logfire - 1st of month",
      "matchPackagePatterns": ["logfire", "^us-docker\\.pkg\\.dev/pydantic-public-registries/"],
      "schedule": ["on the 1st day of the month"]
    },
    {
      "description": "Prometheus - 15th of month",
      "matchPackagePatterns": ["kube-prometheus-stack"],
      "schedule": ["on the 15th day of the month"]
    },
    {
      "description": "Envoy Gateway - 15th of month",
      "matchPackagePatterns": ["gateway-helm"],
      "schedule": ["on the 15th day of the month"]
    },
    {
      "description": "KEDA - 15th of month (disabled)",
      "matchPackagePatterns": ["keda", "^ghcr\\.io/kedacore/"],
      "schedule": ["on the 15th day of the month"],
      "enabled": false
    }
  ]
}
